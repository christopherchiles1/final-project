<div id="entry-content">
  <div class="entry-panel">
    <div class="entry-group">
      <%= image_tag "logo(large).png" %>
      <div class="title">Welcome to Life Tracker</div>
      <div class="subtitle">A task-management application</div>
      <div class="entry-form">
        <h1> Log In! </h1>
        <form action="<%= session_url %>" method="post">
          <%= auth %>
          <label>Username</label>
            <input class="form-control"
              id="username"
              type="text" name="user[username]" value="<%=@user.username%>">
          <label>Password</label>
            <input class="form-control"
              id="password"
              type="password" name="user[password]">
          <input class="btn btn-primary pull-right" type="submit" value="Log in!">
        </form>
        <div class="entry-footer">
          Not awesome yet? <%= link_to("Sign up!", new_user_url)  %>
          <br>
          Want to try it out? <a id="demo-login">Log in as Demo</a>
        </div>
      <div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(function () {
    $("#demo-login").on("click", function () {
      $("#username").val("demo")
      $("#password").val("password")
      $.ajax({
        url: "/session",
        type: "POST",
        data: { user: { username: 'demo', password: 'password'} },
        success: function (response) {
          window.location.href = "/";
        }
      })
    });
  })
</script>
